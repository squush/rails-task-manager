<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<% if @task.completed %>

  <p> Completed </p>

<% else %>

  <p> Not complete </p>

<% end %>

<p><%= link_to 'Edit this task', edit_path %></p>

<p><%= link_to 'Delete task', task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you suure' } %></p>

<%= link_to 'Back to List', tasks_path %>
